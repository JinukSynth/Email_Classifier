{
    "manifest_version": 3,
    "name": "Email Classifier",
    "description": "Automatically classifies emails into categories",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*", "https://mail.naver.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  